<section class="container">
    <div class="row">
        <div class="col-md-4 burgers">
            <h3>Burgers to Eat:</h3>
            {{#each burgers}}
                {{#unless devoured}}
                    {{burger_name}} <br>
                    <button class="devour" data-id="{{id}}">
                        Devour!
                    </button> <br> <br>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-4">
            <img src="/assets/img/burger.jpg" alt="Burger" style="width: 100%">
            <form>
                <label for="newBurger">Enter the name of a burger to eat</label>
                <input type="text" id="newBurger" placeholder="Burger Name">
                <button class="addBurger">Add Burger</button>
            </form>
        </div>
        <div class="col-md-4 burgers">
            <h3>Burgers Eaten:</h3>
            {{#each burgers}}
                {{#if devoured}}
                    {{burger_name}} <br><br>
                {{/if}}
            {{/each}}
        </div>
    </div>
</section>